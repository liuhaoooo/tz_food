    background: #ffffff;
}
.right_content_list>._img {
    width: 170rpx;
    height: 170rpx;
}
.right_content_list>view {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
.food_name {
    margin-top: 30rpx;
    width: 90%;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
    text-align: center;
}
.right_content_list>radio {
    margin-top: 46rpx;
}
