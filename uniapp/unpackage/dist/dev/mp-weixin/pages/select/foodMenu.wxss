  width: 100%;
  height: 100rpx;
  padding-top: 10rpx;
  padding-bottom: 16rpx;
}
.footer > view {
  width: 55%;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  left: 5%;
}
.submit_button {
  position: absolute;
  width: 30%;
